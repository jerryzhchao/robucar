<?xml version="1.0"?>


<robot xmlns:xacro="http://ros.org/wiki/xacro" name="wheel_steered">

  <xacro:include filename="$(find robucar_description)/urdf/wheel.xacro" />

  <xacro:macro name="wheel_steered" params="wheel_prefix parent_link *joint_origin">
    <link name="${wheel_prefix}_steering">
      <inertial>
        <mass value="0.1" />
        <origin xyz="0 0 0" />
        <inertia  ixx="1.0" ixy="0" ixz="0"
                  iyy="1.0" iyz="0"
                  izz="1.0" />
      </inertial>
    </link>

    <joint name="${wheel_prefix}_steering_joint" type="revolute">
      <limit lower="${-M_PI/4}" upper="${M_PI/4}" effort="-1" velocity="-1"/>
      <axis xyz="0 0 1"/>
      <parent link="${parent_link}"/>
      <child link="${wheel_prefix}_steering"/>
      <xacro:insert_block name="joint_origin"/>
    </joint>

    <transmission name="${wheel_prefix}_steering_trans" type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="${wheel_prefix}_steering_motor">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="${wheel_prefix}_steering_joint">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
    </transmission>

    <xacro:wheel wheel_prefix="${wheel_prefix}" parent_link="${wheel_prefix}_steering">
      <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:wheel>
  </xacro:macro>

</robot>

